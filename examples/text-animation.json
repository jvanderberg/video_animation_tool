{
  "project": {
    "width": 1920,
    "height": 1080,
    "fps": 60,
    "frames": 180
  },
  "objects": [
    {
      "type": "rect",
      "id": "background",
      "x": 0,
      "y": 0,
      "width": 1920,
      "height": 1080,
      "fill": "#0a0a0a",
      "z": 0
    },
    {
      "type": "text",
      "id": "title",
      "content": "Animation Tool",
      "x": 960,
      "y": 450,
      "opacity": 0,
      "size": 96,
      "font": "sans-serif",
      "color": "#FFFFFF",
      "anchor": "center",
      "z": 10
    },
    {
      "type": "text",
      "id": "subtitle",
      "content": "Declarative Video Creation",
      "x": 960,
      "y": 540,
      "opacity": 0,
      "size": 48,
      "font": "sans-serif",
      "color": "#888888",
      "anchor": "center",
      "z": 10
    },
    {
      "type": "rect",
      "id": "accent-box",
      "x": 860,
      "y": 600,
      "width": 0,
      "height": 8,
      "fill": "#FF6B35",
      "z": 5
    }
  ],
  "sequences": [
    {
      "name": "title-intro",
      "animations": [
        {
          "target": "title",
          "property": "opacity",
          "keyframes": [
            {"frame": 0, "value": 0},
            {"frame": 30, "value": 1, "easing": "ease-in"}
          ]
        },
        {
          "target": "title",
          "property": "y",
          "keyframes": [
            {"frame": 0, "value": 450},
            {"frame": 30, "value": 400, "easing": "ease-out"}
          ]
        }
      ]
    },
    {
      "name": "subtitle-intro",
      "animations": [
        {
          "target": "subtitle",
          "property": "opacity",
          "keyframes": [
            {"frame": 30, "value": 0},
            {"frame": 60, "value": 1, "easing": "ease-in"}
          ]
        }
      ]
    },
    {
      "name": "accent-grow",
      "animations": [
        {
          "target": "accent-box",
          "property": "width",
          "keyframes": [
            {"frame": 60, "value": 0},
            {"frame": 90, "value": 200, "easing": "ease-out"}
          ]
        }
      ]
    }
  ]
}
